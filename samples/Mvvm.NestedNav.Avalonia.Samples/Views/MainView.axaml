<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Mvvm.NestedNav.Avalonia;assembly=Mvvm.NestedNav.Avalonia"
             xmlns:screens="clr-namespace:Mvvm.NestedNav.Avalonia.Samples.Screens"
             xmlns:viewModels="clr-namespace:Mvvm.NestedNav.Avalonia.Samples.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Mvvm.NestedNav.Avalonia.Samples.Views.MainView"
             x:DataType="viewModels:MainViewModel">
    
    <TabControl Margin="5">
        <TabItem Header="Home">
            <avalonia:NavigationHost ViewModelFactory="{Binding ViewModelFactory}">
                <avalonia:NavigationHost.InitialScreen>
                    <screens:HomeScreen/>
                </avalonia:NavigationHost.InitialScreen>
            </avalonia:NavigationHost>
        </TabItem>
        <TabItem Header="Settings">
            <avalonia:NavigationHost ViewModelFactory="{Binding ViewModelFactory}">
                <avalonia:NavigationHost.InitialScreen>
                    <screens:SettingsScreen/>
                </avalonia:NavigationHost.InitialScreen>
            </avalonia:NavigationHost>
        </TabItem>
        <TabItem Header="Profile">
            <avalonia:NavigationHost ViewModelFactory="{Binding ViewModelFactory}">
                <avalonia:NavigationHost.InitialScreen>
                    <screens:ProfileScreen/>
                </avalonia:NavigationHost.InitialScreen>
            </avalonia:NavigationHost>
        </TabItem>
    </TabControl>
    
</UserControl>
