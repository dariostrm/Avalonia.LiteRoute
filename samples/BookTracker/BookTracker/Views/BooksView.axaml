<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:BookTracker.ViewModels"
             xmlns:domain="clr-namespace:BookTracker.Domain"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="BookTracker.Views.BooksView"
             x:DataType="viewModels:BooksViewModel">

    <Grid>
        <Grid RowDefinitions="Auto, *">

            <TextBlock Text="Books" FontSize="24" FontWeight="Bold" Margin="10"/>

            <ScrollViewer Grid.Row="1"
                          Margin="10 10 10 0">
                <ItemsControl ItemsSource="{Binding Books}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="domain:Book">

                            <Button Padding="15"
                                    Classes="BookItem"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Command="{Binding $parent[ItemsControl].((viewModels:BooksViewModel)DataContext).SelectBookCommand}"
                                    CommandParameter="{Binding Id}">
                                <Grid ColumnDefinitions="*, 3*">
                                    <!-- Placeholder for book cover image -->
                                    <Border Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                            CornerRadius="10"
                                            Height="125">
                                        <LucideIcon Kind="Book" Size="50" Foreground="White"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1"
                                                Margin="20 10 0 0"
                                                Spacing="5">
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="18"
                                                   FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="5">
                                            <LucideIcon Kind="User" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Author}"
                                                       FontSize="14"
                                                       Foreground="Gray" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="5">
                                            <LucideIcon Kind="Files" Foreground="Gray"/>
                                            <TextBlock FontSize="14"
                                                       Foreground="Gray" >
                                                <Run Text="{Binding Pages}"/>
                                                <Run Text="pages"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Button>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>
            
            <Grid.Styles>
                <Style Selector="Button.BookItem">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style Selector="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Styles>
            
            <!-- This is shown if loading -->
            <Grid IsVisible="{Binding Loaded, Converter={x:Static BoolConverters.Not}}"
                  Background="Black"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  Opacity="0.7">
                <ProgressBar IsIndeterminate="True"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
            </Grid>

        </Grid>
        
    </Grid>
    
</UserControl>
